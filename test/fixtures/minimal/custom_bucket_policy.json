{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "CustomDenyInsecureCommunications",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:*",
            "Resource": [
                "${aws_s3_bucket_arn}"
            ],
            "Condition": {
                "Bool": {
                    "aws:SecureTransport": "false"
                }
            }
        },
        {
            "Sid": "CustomDenyIncorrectEncryptionHeader",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:PutObject",
            "Resource": [
                "${aws_s3_bucket_arn}/*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "s3:x-amz-server-side-encryption": "aws:kms"
                }
            }
        },
        {
            "Sid": "CustomDenyUnencryptedObjectUploads",
            "Effect": "Deny",
            "Principal": "*",
            "Action": "s3:PutObject",
            "Resource": [
                "${aws_s3_bucket_arn}/*"
            ],
            "Condition": {
                "Null": {
                    "s3:x-amz-server-side-encryption": "true"
                }
            }
        },
        {
            "Sid": "AllowReadsFromEntireAccount",
            "Effect": "Allow",
            "Principal": {
                "AWS": "${current_account_id}"
            },
            "Action": "s3:Get*",
            "Resource": [
                "${aws_s3_bucket_arn}",
                "${aws_s3_bucket_arn}/*"

            ]
        }
    ]
}
